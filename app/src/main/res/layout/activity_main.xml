<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.efelnic.driveapp.MainActivity"
    android:background="#514d4d">

    <Button
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:text="Ready"
    android:id="@+id/readyButton"
    android:textColor="#ffffff"
    android:paddingLeft="80dp"
    android:paddingRight="80dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
        android:layout_margin="10dp"
    android:textSize="30dp"
    android:background="#059326"
    android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/Flag"
        android:id="@+id/FlagImage"
        android:layout_below="@+id/readyButton" />

    <Button
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="Script"
        android:id="@+id/scriptButton"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:background="#2f6be9"
        android:layout_below="@+id/FlagImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="Recordings"
        android:id="@+id/recordingsButton"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:background="#5463ee"
        android:layout_below="@+id/scriptButton"
        android:layout_centerHorizontal="true" />

