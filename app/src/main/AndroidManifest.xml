<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efelnic.driveapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/car_nav"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TrackingActivity" />
        <activity android:name=".ScriptActivity" />
        <activity android:name=".RecordingsActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".DatabaseItemActivity" />
        <!-- <activity -->
        <!-- android:name=".PreferenceActivity" -->
        <!-- android:label="@string/title_activity_preference" -->
        <!-- android:theme="@style/AppTheme.NoActionBar" /> -->
        <activity
            android:name=".UserSettingActivity"
            android:label="@string/title_activity_user_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".RawDataActivity"
            android:label="@string/title_activity_raw_data"
            android:parentActivityName=".DatabaseItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.efelnic.driveapp.DatabaseItemActivity" />
        </activity>
        <activity android:name=".PrivacyActivity" />
        <activity android:name=".TermsActivity" />
        <activity android:name=".CreditsActivity"></activity>
    </application>

</manifest>
